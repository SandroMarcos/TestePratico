@{
    ViewBag.Title = "Cadastro de Skills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de skills</h2>
    <br />
    <script src="@Url.Content("~/Scripts/Cadastro/skillController.js")" type="text/javascript"></script>
    <div ng-controller="skillCadastroCtrl" ng-init="obterTodos()">
        <div  class="container">
            <div class="center-table" style="width:910px">
                <form name="frmSkill" class="form-horizontal">
                <input type="hidden" name="Id" ng-model="model.Id" value="{{ model.Id }}" />                
                <fieldset>
                    <div class="form-group-md">                        
                        <label for="descricao" class="col-md-3 control-label" >
                            Descrição :</label>
                            
                        <div class="col-md-9">
                            <input type="text" ng-model="model.Descricao" class="form-control" required id="descricao"
                                value="{{ model.Descricao }}" />
                        </div>
                    </div>
                    <div class="form-group-md">
                        <div class="col-md-3">
                            &nbsp                            
                        </div>
                        <div class="col-md-9 col-md-offset-9">
                            <input type="button" ng-disabled="frmSkill.$invalid" ng-click="salvar()" class="btn btn-primary buttom-Padrao"
                                value="Salvar" />
                            <input type="button" ng-click="novo()" class="btn btn-primary buttom-Padrao"
                                value="Novo" />
                            <input type="button" ng-click="excluir()" class="btn btn-primary buttom-Padrao" ng-disabled="isDisabled()"
                                value="Excluir" />

                        </div>
                    </div>
                </fieldset>
                </form>
            </div>
            <br />
            <table class="table-striped table-bordered span5 center-table" width="910px">
                <thead>
                    <tr>
                        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                            Descrição
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="skill in model.listagem">
                        <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                            <a href="#" ng-click="editar(skill.Id)">{{ skill.Descricao }}</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>