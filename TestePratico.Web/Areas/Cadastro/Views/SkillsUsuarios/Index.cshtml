@{
    ViewBag.Title = "Associar Skills ao Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de usuários</h2>
    <br />
    <script src="@Url.Content("~/Scripts/Cadastro/skillsUsuariosController.js")" type="text/javascript"></script>
    <div ng-controller="skillsUsuariosCadastroCtrl" ng-init="obterTodos()">
        <div  class="container">
            <div class="center-table" style="width:910px">
                <form name="frmAssociar" class="form-horizontal">                
                <fieldset>
                    <div class="form-group-md">                        
                        <div class="col-md-2">                                        
                            <label for="codUsuario" class="control-label" >
                                Usuário :</label>
                        </div>
                            
                        <div class="col-md-5">
                            <select class="form-control" id="codUsuario" ng-model="model.CodUsuario" ng-change="editar()"
                                required ng-options="usuario.Value*1 as usuario.Text for usuario in model.TodosUsuarios">
                            </select>                            
                        </div>
                        <div class="col-md-1">
                            &nbsp;&nbsp;
                        </div>
                        <br />
                        <br />
                    </div>
                    <div class="form-group-md">    
                        <div class="col-md-2">                                        
                            <label for="skills" class="control-label" >
                                Skills :</label>
                        </div>
                            
                        <div class="col-md-5">
                            <select class="form-control" id="skills" ng-model="model.Skills"  multiple
                                required ng-options="skill.Value*1 as skill.Text for skill in model.TodosSkills">
                            </select>                            
                        </div>
                        <div class="col-md-1">
                            &nbsp;&nbsp;
                        </div>
                        <br />
                        <br />

                    </div>
                    <div class="form-group-md">
                        <div class="col-md-3">
                            &nbsp                            
                        </div>
                        <div class="col-md-9 col-md-offset-9">
                            <input type="button" ng-disabled="frmAssociar.$invalid" ng-click="salvar()" class="btn btn-primary buttom-Padrao"
                                value="Salvar" />
                            <input type="button" ng-click="novo()" class="btn btn-primary buttom-Padrao"
                                value="Novo" />
                            <input type="button" ng-click="excluir()" class="btn btn-primary buttom-Padrao" ng-disabled="isDisabled()"
                                value="Excluir" />
                        </div>
                    </div>
                </fieldset>
                </form>
            </div>
            <br />
            <table class="table-striped table-bordered span5 center-table" width="910px">                
                <thead>                    
                    <tr>
                        <th colspan="2" class="text-center">Listagem Usuários X Skills</th>
                    </tr>
                    <tr>
                        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                            Usuário
                        </th>
                        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                            Skills
                        </th>
                    </tr>
                </thead>
                <tbody >
                    <tr ng-repeat="lista in listagem">
                      <td >{{lista.Usuario}}</td>                      
                      <td><span ng-repeat="skill in lista.Skill">{{skill}} <br /> </span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

